<p id="notice"><%= notice %></p>
<h1>Todo List</h1>
<hr>
<br>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3" scope="col">What do you want to do?</th>
    </tr>
  </thead>
  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Show', todo_list, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Todo List', new_todo_list_path, class: "btn btn-primary btn-lg, btn-block btn-new-todo" %>