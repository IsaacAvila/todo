<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-6">
    <h1 class="col-sm-12">
      <strong>Title:</strong>
      <%= @todo_list.title %>
    </h1>
    <p class="col-sm-12">
      <strong>Description:</strong>
      <%= @todo_list.description %>
    </p>
  </div>
  <div class="col-sm-3 offset-sm-3">
    <br>
    <div class="btn-group btn-group-toggle col-sm-6 offset-sm-6">        
      <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: "btn btn-primary btn-sm"%>
      <%= link_to 'Back', todo_lists_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
<div class="row">
  <table class="table">
    <tbody>
      <%= render @todo_list.todo_items %>
    </tbody>
  </table>
</div>
<div class="row">
  <%= render "todo_items/form" %>
</div>