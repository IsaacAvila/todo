<%= form_for([@todo_list, @todo_list.todo_items.build], :html => {:class => "form-inline col-sm-12 justify-content-around"}) do |f| %>
  <%= f.text_field :content, placeholder: "New Todo",  class: "form-control form-control-lg col-sm-6" %>   
  <%= f.submit "Create Item",  class: "btn btn-primary btn-lg col-sm-5" %>
<% end %>
